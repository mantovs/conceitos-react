{
  "compilerOptions": {
    "lib": ["DOM","DOM.Iterable","ESNext"],                                        
    "jsx": "react-jsx",                                
    "moduleResolution": "node",                       
    "allowJs": true,                                  
    "noEmit": true,                                   
    "allowSyntheticDefaultImports": true,             
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true, 
    "strict": true,                                      
    "skipLibCheck": true,
    "resolveJsonModule":true,
    "isolatedModules":true                            
  },
  "include": ["src"]
}